<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Tickmunk</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
  </head>
  <body>
    <div class="container">
      <h1>A plan</h1>

      <ul>
        <% tasks.forEach(function(task) { %>
          <li><%= task.from_date %> - <%= task.to_date %> - <%= task.description %>&nbsp
            <a href="/edit/<%= task.id %>">Edit</a>&nbsp
            <a href="/delete/<%= task.id %>">Delete</a>
          </li>
        <% }); %>
      </ul>
      <a href="/new">New</a>
    </div>
  </body>
</html>